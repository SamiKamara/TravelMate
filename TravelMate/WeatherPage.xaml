<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelMate.WeatherPage"
             Title="WeatherPage"
             BackgroundColor="{StaticResource DefaultBackgroundColor}">

    <StackLayout Spacing="20" Padding="20">

        <!-- Temperature Slider -->
        <StackLayout Orientation="Horizontal" 
                     Spacing="10" 
                     HorizontalOptions="FillAndExpand">
            <Label Text="Temperature" 
                   VerticalOptions="Center"/>
            <Slider x:Name="TemperatureSlider" 
                    Maximum="100" 
                    Minimum="0" 
                    VerticalOptions="Center" 
                    HorizontalOptions="FillAndExpand"/>
        </StackLayout>

        <!-- Chance of Rain Slider -->
        <StackLayout Orientation="Horizontal" 
                     Spacing="10" 
                     HorizontalOptions="FillAndExpand">
            <Label Text="Chance of Rain" 
                   VerticalOptions="Center"/>
            <Slider x:Name="RainSlider" 
                    Maximum="100" 
                    Minimum="0" 
                    VerticalOptions="Center" 
                    HorizontalOptions="FillAndExpand"/>
        </StackLayout>

        <!-- Cloudiness Slider -->
        <StackLayout Orientation="Horizontal" 
                     Spacing="10" 
                     HorizontalOptions="FillAndExpand">
            <Label Text="Cloudiness" 
                   VerticalOptions="Center"/>
            <Slider x:Name="CloudinessSlider" 
                    Maximum="100" 
                    Minimum="0" 
                    VerticalOptions="Center" 
                    HorizontalOptions="FillAndExpand"/>
        </StackLayout>

        <!-- Wind Speed Slider -->
        <StackLayout Orientation="Horizontal" 
                     Spacing="10" 
                     HorizontalOptions="FillAndExpand">
            <Label Text="Wind Speed" 
                   VerticalOptions="Center"/>
            <Slider x:Name="WindSpeedSlider" 
                    Maximum="100" 
                    Minimum="0" 
                    VerticalOptions="Center" 
                    HorizontalOptions="FillAndExpand"/>
        </StackLayout>

        <Button Text="View Results >" 
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Margin="0,20,0,0" 
                Clicked="OnViewResultsClicked" />

    </StackLayout>

</ContentPage>
