<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelMate.ResultsPage"
             Title="ResultsPage"
             BackgroundColor="{StaticResource DefaultBackgroundColor}">
    <VerticalStackLayout>
        <Entry x:Name="StartCoords" Placeholder="Start Coordinates (lat,lng)" />
        <Entry x:Name="EndCoords" Placeholder="End Coordinates (lat,lng)" />
        <Button Text="Temporary debug Button to get route data" Clicked="OnGetRouteClicked" />

        <Label x:Name="RouteLabel" />
    </VerticalStackLayout>
</ContentPage>
