<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelMate.ResultsPage"
             Title="ResultsPage"
             BackgroundColor="{StaticResource DefaultBackgroundColor}">

    <VerticalStackLayout>
        <HorizontalStackLayout Margin="0, 20">
            <Entry x:Name="tempEntry" WidthRequest="60" Placeholder="Temp" Keyboard="Numeric" TextChanged="OnEntryTextChanged"/>
            <Entry x:Name="rainEntry" WidthRequest="60" Placeholder="Rain" Keyboard="Numeric" TextChanged="OnEntryTextChanged"/>
            <Entry x:Name="cloudsEntry" WidthRequest="60" Placeholder="Clouds" Keyboard="Numeric" TextChanged="OnEntryTextChanged"/>
            <Entry x:Name="windEntry" WidthRequest="60" Placeholder="Wind" Keyboard="Numeric" TextChanged="OnEntryTextChanged"/>
        </HorizontalStackLayout>

        <Entry x:Name="StartCoords" Placeholder="Start address" />
        <Entry x:Name="EndCoords" Placeholder="End address" />

        <BoxView HeightRequest="1" BackgroundColor="Gray" Margin="0, 20" />

        <Entry x:Name="StreetAddressInput" Placeholder="Enter Street Address" />

        <Label  x:Name="DesiredWeather" />
        <Label x:Name="DestinationWeather" />

        <ScrollView HeightRequest="1000">
            <Editor x:Name="ResultEditor" TextColor="White" IsReadOnly="True" />
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>
