<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelMate.ResultsPage"
             Title="ResultsPage"
             BackgroundColor="{StaticResource DefaultBackgroundColor}">

    <VerticalStackLayout>
        <BoxView HeightRequest="1" BackgroundColor="Gray" Margin="0, 20" />
        <Entry x:Name="StreetAddressInput" Placeholder="Enter Street Address" />
        <Label  x:Name="DesiredWeather" />
        <Label x:Name="DestinationWeather" />
        <ScrollView HeightRequest="1000">
            <Editor x:Name="ResultEditor" TextColor="White" IsReadOnly="True" />
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>
